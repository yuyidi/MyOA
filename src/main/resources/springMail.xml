<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="defaultEncoding" value="UTF-8" /> 
        <!-- 服务器 -->
        <property name="host" value="smtp.163.com" />
        <!-- 端口号 -->
        <property name="port" value="25" />
        <!-- 用户名 -->
        <property name="username" value="yuyidi0630@163.com" />
        <!--  密码   -->
        <property name="password" value="0630Yi2514" />
        <!-- SMTP服务器验证 -->
        <property name="javaMailProperties">
            <props>
                <!-- 验证身份 -->
                <prop key="mail.smtp.auth">true</prop>
                <prop key="mail.smtp.timeout">25000</prop>
           </props>
        </property>
    </bean>
    <!-- 
       目前我用过的EMAIL账号都是网易的,下面列出网易的SMTP服务器名和端口号:
        网易邮箱               SMTP服务器                      SMTP端口           POP3服务器                       POP3端口
   @126.com     smtp.126.com      25          pop3.126.com      110
   @163.com     smtp.163.com      25          pop3.163.com      110
   @yeah.net    smtp.yeah.net     25          pop3.yeah.net     110
    -->
    
    <bean id="simpleMailMessage" class="org.springframework.mail.SimpleMailMessage">
        <!-- 发件人email -->
        <property name="from" value="yuyidi0630@163.com" />
    </bean>
    
    <bean id="simpleMail" class="com.yyd.myoa.utils.Mail">
        <property name="mailSender" ref="mailSender" />
        <property name="simpleMailMessage" ref="simpleMailMessage" />
    </bean>
</beans>		