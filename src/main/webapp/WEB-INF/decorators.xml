<?xml version="1.0" encoding="utf-8"?>
<decorators defaultdir="/WEB-INF/decorators">
    <!-- 此处用来定义不需要过滤的页面 -->
    <excludes>
    	<pattern>/login</pattern>
    	<pattern>/404</pattern>
    	<pattern>/500</pattern>
    </excludes>

    <!-- 用来定义装饰器要过滤的页面 -->
    <decorator name="main" page="main.ftl">
    	<pattern>/*</pattern>
    </decorator>
</decorators>